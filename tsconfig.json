{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./app",
    "baseUrl": "./",
    "paths": {
      "@app": ["app/*"],
      "@assets": ["app/assets/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
